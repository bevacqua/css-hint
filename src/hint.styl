@import 'nib'
@import 'tooltip'

z-hint = 5000

[aria-label],
[data-hint],
[data-hint-before]
  position relative

[aria-label]:after,
[data-hint]:after,
[data-hint-before]:before
  display none
  position absolute
  top 16px
  left 6px

  z-index z-hint
  pointer-events none
  transition all 0.3s ease

  tooltip()

[aria-label]:hover:after,
[data-hint]:hover:after,
[data-hint-before]:hover:before
  transform translateY(8px)
  display block

[aria-label]:after
  content attr(aria-label)

[data-hint]:after
  content attr(data-hint)

[data-hint-before]:before
  content attr(data-hint-before)

@media only screen and (min-width: 768px)
  [aria-label]:after,
  [data-hint]:after,
  [data-hint-before]:before
    display block
    opacity 0

  [aria-label]:hover:after,
  [data-hint]:hover:after,
  [data-hint-before]:hover:before
    opacity 1

@media only print
  [aria-label]:after,
  [data-hint]:after,
  [data-hint-before]:before
    display none
